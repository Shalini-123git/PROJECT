<body>
    <div class="body">
    <h1>Patient Login:</h1>
    <form method="POST" action="/login">
        <label for="email">Email:</label>
        <input 
            type="email" 
            name="email"
            id="email"
             required>
        <br/>
        <label for="username">Username:</label>
        <input 
            id="username"
            type="text" 
            name="username" 
            placeholder="Username" 
            required>
        <br/>
        <label for="password">password:</label>
        <input 
            id="password"
            type="password" 
            name="password" 
            placeholder="password" 
            required>
        <br/>
        <button type="submit">Login</button>
    </form>
    </div>
</body>
